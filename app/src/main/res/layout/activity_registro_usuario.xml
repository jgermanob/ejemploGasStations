<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registro_usuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.germanco.opentable.RegistroUsuario">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRO DE USUARIO"
        android:textColor="#303F9F"
        android:textSize="30dp"
        android:id="@+id/tituloRegistro"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/correoRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce tu correo"
        android:inputType="textEmailAddress"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tituloRegistro"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/contrase単aRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce tu contrase単a"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:layout_below="@id/correoRegistro"/>

    <EditText
        android:id="@+id/confirmaRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirma tu contrase単a"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:layout_below="@id/contrase単aRegistro"/>

    <Button
        android:id="@+id/botonRegistro"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmaRegistro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Registrarse"/>

</RelativeLayout>
